<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/startRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark_gradient"
    android:padding="24dp">

    <!-- 앱 타이틀 -->
    <TextView
        android:id="@+id/startTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="QR 코드 스캐너"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/do_hyeon_regular"
        android:shadowColor="#66000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />


    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="QR 코드를 스캔하려면 시작하세요"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:fontFamily="@font/do_hyeon_regular" />
    -->

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="248dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_gradient_teal"
        android:text="시작하기"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:letterSpacing="0.05"
        android:fontFamily="@font/do_hyeon_regular"
        android:elevation="8dp" />
</RelativeLayout>
